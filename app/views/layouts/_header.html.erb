<header class="site-header">
  <div class="wrapper site-header__wrapper">
    <nav class="nav">
      <!--ロゴ部分-->
      <div class="brand">
          <a href="/"><img class="logo" src="/assets/apple_tree2.png" alt="nagano cake"></a>
      </div>
      <ul class="nav__wrapper">
          <% if admin_signed_in? %>
          <!--管理者でログインしたら-->
            <li class="header-btn"><%= link_to '商品一覧', admin_items_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to '会員一覧', admin_customers_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to '注文履歴一覧', admin_root_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to 'ジャンル一覧', admin_categories_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            
          <% elsif customer_signed_in? %>
          <!--カスタマーでログインしたら-->
            <li class="header-btn"><%= link_to 'マイページ', customers_my_page_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to '商品一覧', items_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to 'カート', cart_items_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            
          <% else %>
            <li class="header-btn"><%= link_to 'about', homes_about_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to '商品一覧', items_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
            <li class="header-btn"><%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-outline-light btn-sm btn-block nav-link text-dark' %></li>
          <% end %>
      </ul>
      
      
      <!--名前表示部分-->
      <% if customer_signed_in? %>
      <div class="navbar-nav">ようこそ、<%= current_customer.last_name %>さん！</div><% end %>
      <div class="navbar-nav">
        <form id="form2" action="/" method="get">
          <input id="sbox2"  id="s" name="s" type="text" placeholder="Search"/>
          <button type="submit" id="sbtn2"><i class="fas fa-search"></i></button>
        </form>
      </div>
  
    </nav>
  </div>
</header>