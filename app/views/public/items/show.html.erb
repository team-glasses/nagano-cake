<div class='container'>
  <div class='row'>
    <div class='col-md-2'>
      <%= render 'public/items/category_search', category: @categories %>
    </div>
    <div class='col-md-9 offset-md-1'>
      <h4>商品一覧 （全<%= @items.count %>件）</h4>
      <% @items.each do |item| %>
        <h4><%= link_to item.name, item_path(item), class: "item_#{item.id}" %></h4>
        <%= @item.explanation %>
        <!--item.rbでの計算結果を3桁ごとにカンマ区切りで表示-->
        ￥<%= @item.add_tax_price.to_s(:delimited) %> （税込）
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>