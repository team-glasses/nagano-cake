<div class='container'>
  <div class='row'>
    <div class='mx-auto col-8 py-3'>

      <div class="row offset-1 mb-4 ">
        <h4>新規会員登録</h4>
      </div>

      <div class="form-horizontal mb-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-grop row">
            <div class="col-form-label col-sm-3">名前</div>

              <%= f.label :last_name, "(姓)", class: "col-form-label col-sm-1 " %>
              <div class="col-sm-3">
                <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control-sm" %>
              </div>

              <%= f.label :first_name, "(名)", class: "col-form-label col-sm-1" %>
              <div class="col-sm-3">
                <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "form-control-sm" %>
              </div>
          </div>

          <div class="form-grop row">
            <div class="col-form-label col-sm-3">フリガナ</div>

              <%= f.label :kana_last_name, "(セイ)", class: "col-form-label col-sm-1 " %>
              <div class="col-sm-3">
                <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "family-name", class: "form-control-sm" %>
              </div>

              <%= f.label :kana_first_name, "(メイ)", class: "col-form-label col-sm-1" %>
              <div class="col-sm-3">
                <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "given-name", class: "form-control-sm" %>
              </div>
          </div>



          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
              <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control-sm" %>
            </div>
          </div>

          <div class="form-grop row">
            <%= f.label :address, "住所", class: "col-md-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col">
              <%= f.text_field :address, autocomplete: "address-level3", class: "form-control-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-sm-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
              <%= f.text_field :telephone_number, autocomplete: "tel", class: "form-control-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, "パスワード(6文字以上)", class: "col-sm-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
              <%= f.password_field :password, autocomplete: "off", class: "form-control-sm" %>
            </div>
          </div>


          <div class="form-group row">
            <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 col-form-label"  %>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control-sm" %>
            </div>
          </div>

            <div class="offset-md-4 my-3">
              <%= f.submit "新規登録", class: 'btn btn-success btn-block' %>
            </div>

        <% end %>
      </div>

      <div class="row mb-3">
        <h5 class="mb-3">既に登録済みの方</h5>
        <div class="offset-1">
          <%= link_to "こちら", new_customer_session_path %> &ensp; からログインしてください。
        </div>
      </div>

    </div>
  </div>
</div>
