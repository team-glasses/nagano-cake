<div class='container'>
 <div class='row'>
  <div class='mx-auto col-8 py-3'>

    <div class="row offset-1 mb-4">
      <strong>配送先編集</strong>
    </div>

    <div class="row mb-5">
     <%= form_with model: @address, local:true do |f| %>

     <div class="form-grop row">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
        <div class="col-3">
         <%= f.text_field :postal_code, autofocus: true, class: "form-control form-control-sm", placeholder: "0000000" %>
        </div>
     </div>

     <div class="form-grop row">
        <%= f.label :address, "住所", class: "col-3 col-form-label" %>
        <div class="col-6">
         <%= f.text_field :address, autofocus: true, class: "form-control form-control-sm", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>

     </div>
     <div class="form-grop row">
        <%= f.label :name, "宛名", class: "col-3 col-form-label" %>
        <div class="col-3">
         <%= f.text_field :name, autofocus: true, class: "form-control form-control-sm", placeholder: "令和道子" %>
        </div>

        <div class="col-3 offset-3">
          <%= f.submit "変更内容を保存", class: 'btn btn-success btn-block' %>
        </div>
     </div>

     <% end %>
    </div>
