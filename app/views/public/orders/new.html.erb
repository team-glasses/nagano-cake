<div class="container">
  <div class="row">
    <div class="col-auto offset-1">
      <h5>注文情報入力</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @order, local: true do |f| %>
        <label>支払方法</label>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, "クレジットカード" %>

        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, "銀行振込" %>
        <label>お届け先</label>
        <%= f.radio_button :address, Order.selected_addresses.key(0) %>
        <%= f.label :address, "ご自身の住所" %><br>
        <%= f.label :address, current_customer.full_address %>

        <%= f.radio_button :address, Order.selected_addresses.key(1) %>
        <%= f.label :address, "登録済み住所から選択" %>
        <%= f.collection_select :address_id, Address.all, :id, :full_address, {prompt: "--選択してください--"} %>
        <%= f.radio_button :address, Order.selected_addresses.key(2) %>
        <%= f.label :address, "新しいお届け先" %>
        <label>郵便番号（ハイフンなし）</label>
        <%= f.text_field :postal_code %>
        <label>住所</label>
        <%= f.text_field :address %>
        <label>宛名</label>
        <%= f.text_field :name %>
        <%= f.submit "確認画面へ進む" %>
      <% end %>
    </div>
  </div>
</div>