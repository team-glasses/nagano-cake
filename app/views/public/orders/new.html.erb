<div class="container">
  <div class="row">
    <div class="col-auto offset-1">
      <h5>注文情報入力</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
        <label>支払方法</label>
        <%= f.radio_button :payment_method, 'credit_card' %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

        <%= f.radio_button :payment_method, 'transfer' %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        <label>お届け先</label>
        <%= f.radio_button :select_address, "0"  %>
        <%= f.label :address, "ご自身の住所" %><br>
        <%= f.label :address, current_customer.full_address %>

        <%= f.radio_button :select_address, "1" %>
        <%= f.label :address, "登録済み住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
        <%= f.radio_button :select_address, "2" %>
        <%= f.label :address, "新しいお届け先" %>
        <label>郵便番号（ハイフンなし）</label>
        <%= f.text_field :postal_code %>
        <label>住所</label>
        <%= f.text_field :address %>
        <label>宛名</label>
        <%= f.text_field :name %>
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>