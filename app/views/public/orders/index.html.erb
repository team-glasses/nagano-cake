<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-2">
      <h3>注文履歴一覧</h3>
    </div><br><br><br>

      <div class="col-xs-offset-1">
      <table class="table table-bordered table-condensed">
        <tr>
          <td class="info border border-dark table-active">注文日</td>
          <td class="info border border-dark table-active">配送先</td>
          <td class="info border border-dark table-active">注文商品</td>
          <td class="info border border-dark table-active">支払総額</td>
          <td class="info border border-dark table-active">ステータス</td>
          <td class="info border border-dark table-active">注文詳細</td>
        </tr>

        <% @orders.each do |order| %>
          <tr>
            <td class="text-right border border-dark"><%= l order.created_at %></td>
            <td class="text-right border border-dark">〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
            </td>

            <td class="text-right border border-dark">
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br><% end %>
            </td>

            <td class="text-right border border-dark"><%= order.total_payment.to_s(:delimited) %>円</td>

            <td class="text-right border border-dark"><%= order.status_i18n %></td>

            <td class="text-right border border-dark"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>