<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="row offset-1 mb-4">
      <h5>注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>購入者</p>
    </div>
    <div class="col-3">
      <p><%#= link_to "#{@order.name}", admin_customer_path(@order.customer), class: "text-dark"  %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>注文日</p>
    </div>
    <div class="col-3">
      <p><%#= @order.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>配送先</p>
    </div>
    <div class="col-3">
      <p>〒<%#= @order.postal_code.to_s.insert(3, "-") %>""<%#= @order.address %> </p><br />
      <p><%= @order.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>支払方法</p>
    </div>
    <div class="col-3">
      <p><%= @order.payment_method %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>注文ステータス</p>
    </div>
    <div class="col-3">
      <%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
        <%= f.select :order_status, Order.statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm"  %>
        <%= f.submit "更新", class: 'btn btn-success btn-block' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @order.each do |order| %>
          <%#= form_with @order, local: true do |f| %>
          <tr>
            <td><%#= order.item.name %></td>
            <td><%#= order.order_items.price %></td>
            <td><%#= order.order_items.quantity %></td>
            <td><%= order.total_payment %></td>
            <td><%#= f.select :making_status %></td>
            <td><%#= f.submit "更新", class: "btn btn-success btn-block" %></td>
          </tr>
          <%# end %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-2 mx-auto">
      <div class="row">
        <div class="col-1">
          <p>商品合計</p>
        </div>
        <div class="col-1">
          <p>円</p>
        </div>
      </div>
      <div class="row">
        <div class="col-1">
          <p>送料</p>
        </div>
        <div class="col-1">
          <p>円</p>
        </div>
      </div>
      <div class="row">
        <div class="col-1">
          <p>請求金額合計</p>
        </div>
        <div class="col-1">
          <p>円</p>
        </div>
      </div>
    </div>
  </div>
</div>