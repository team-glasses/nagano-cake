<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="row offset-1 mb-4">
      <h5>注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>購入者</p>
    </div>
    <div class="col-3">
      <p><%= link_to @order.customer_name, customers_my_page_path(@order.customer.id) %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>注文日</p>
    </div>
    <div class="col-3">
      <p><%= l @order.created_at %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>配送先</p>
    </div>
    <div class="col-3">
      <p>〒<%= @order.postal_code.to_s.insert(3, "-") %><%= @order.address %> </p>
      <p><%= @order.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>支払方法</p>
    </div>
    <div class="col-3">
      <p><%= @order.payment_method_i18n %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-1">
      <p>注文ステータス</p>
    </div>
    <div class="col-3">
      <%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
        <%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]}, { prompt: '' }, class: 'form-control' %>
        <%= f.submit "更新", class: 'btn btn-success btn-block' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-7 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price.to_s(:delimited)  %></td>
            <td><%= order_item.quantity %></td>
            <td><%= (order_item.price*order_item.quantity).to_s(:delimited)  %></td>
            <%= form_with model: [:admin, order_item], local: true do |f| %>
              <td><%= f.select :making_status, OrderItem.making_statuses.keys.map{|k| [I18n.t("enums.order_item.making_status.#{k}"), k]}, { prompt: '' }, class: 'form-control' %></td>
              <td><%= f.submit "更新", class: "btn btn-success btn-block" %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <div class="row">
        <div class="col-1">
          <p>商品合計</p>
        </div>
        <div class="col-1">
          <p><%= (@order.total_payment - @order.postage).to_s(:delimited) %>円</p>
        </div>
      </div>
      <div class="row">
        <div class="col-1">
          <p>送料</p>
        </div>
        <div class="col-1">
          <p><%= @order.postage %>円</p>
        </div>
      </div>
      <div class="row">
        <div class="col-1">
          <p>請求金額合計</p>
        </div>
        <div class="col-1">
          <p><%= @order.total_payment.to_s(:delimited) %>円</p>
        </div>
      </div>
    </div>
  </div>
</div>