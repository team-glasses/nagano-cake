<div class="container">
  <div class="row">
    <div class="col-2 bg-light text-center">
      <h5>ジャンル編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-auto">
      <%= form_with model: @category,:url => {:action => :update}, local: true do |f| %>
      　<table class="table table-borderless">
          <tbody>
            <tr>
              <td><label class="fw-bold">ジャンル名</label></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
