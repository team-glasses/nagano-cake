<div class="container">
  <div class="row">
    <div class="col-2 text-center">
      <h5>ジャンル編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <%= form_with model: @category,:url => {:action => :update}, local: true do |f| %>
              <td><label class="fw-bold">ジャンル名</label></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
　　</div>
  </div>
</div>
