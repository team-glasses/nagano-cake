<div class="container">
    <div class="row">
      <div class="col-10">

        <div class="row">
            <div class="col mb-3">
                <h5>注文履歴一覧</h5>
            </div>
        </div>
        <div class="row">
          <div class="col">
            <table class="table">
              <thead class= "table-secondary">
                <tr>
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
                </tr>
              </thead>
              <% @orders.each do |order| %>
              <tbody>
                  <tr>
                    <td><%= link_to "#{order.created_at}", admin_order_path(order) %></td>
                    <td><%= order.name %></td>
                    <td><%= @total_quantity[order.id] %></td>
                    <td><%= order.status %></td>
                  </tr>
                </tbody>
              <% end %>
            </table>
          </div>
        </div>


      </div>
    </div>
</div>