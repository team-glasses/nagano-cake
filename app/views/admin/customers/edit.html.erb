<div class='container'>
  <div class='row'>
    <div class='mx-auto col-8 py-3'>

      <div class="row offset-1 mb-4">
        <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
      </div>

      <div class="form-horizontal mb-3">
        <%= form_with model: [:admin, @customer], local: true do |f| %>

          <div class="form-grop row">
            <%= f.label :address, "会員ID", class: "col-md-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-7">
              <%= @customer.id %>
            </div>
          </div>

          <div class="form-grop row">
            <div class="col-form-label col-3">名前</div>
              <div class="col-1"></div>
              <div class="col-3">
                <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control form-control-sm" %>
              </div>
              <div class="col-1"></div>
              <div class="col-3">
                <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "form-control form-control-sm" %>
              </div>
          </div>

          <div class="form-grop row">
            <div class="col-form-label col-3">フリガナ</div>
              <div class="col-1"></div>
              <div class="col-3">
                <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "family-name", class: "form-control form-control-sm" %>
              </div>
              <div class="col-1"></div>
              <div class="col-3">
                <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "given-name", class: "form-control form-control-sm" %>
              </div>
          </div>

          <div class="form-group row">
            <%= f.label :postal_code, "郵便番号", class: "col-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-3">
              <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control form-control-sm" %>
            </div>
          </div>

          <div class="form-grop row">
            <%= f.label :address, "住所", class: "col-md-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-7">
              <%= f.text_field :address, autocomplete: "address-level3", class: "form-control form-control-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :telephone_number, "電話番号", class: "col-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-3">
              <%= f.text_field :telephone_number, autocomplete: "tel", class: "form-control form-control-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "sample@exsample.com" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, "会員ステータス", class: "col-3 col-form-label"  %>
            <div class="col-1"></div>
            <div class="col-2">
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            </div>
            <div class="col-2">
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
            </div>
          </div>

          <div class="offset-4 cd-3 my-3">
            <%= f.submit "変更を保存", class: 'btn btn-success btn-block' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
